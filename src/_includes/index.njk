<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Join First Lutheran Church Ogdensburg every Sunday at 9:00 AM. A warm, welcoming congregation dedicated to worshiping God and serving others.">
  <meta property="og:title" content="First Lutheran Church Ogdensburg">
  <meta property="og:description" content="Join us for worship Sundays at 9:00 AM in Ogdensburg, Wisconsin. Discover faith, community, and grace.">
  <meta property="og:image" content="https://firstlutheranogdensburg.com/images/about.webp">
  <meta property="og:url" content="https://firstlutheranogdensburg.com">
  <meta name="twitter:card" content="summary_large_image">

  <title>First Lutheran Church Ogdensburg</title>

  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Raleway:wght@600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css" />
  <link rel="icon" href="/images/favicon.ico" />

  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

</head>

<body>
  <header>
    <div class="header-container">
      <button class="hamburger" id="hamburger" aria-label="Toggle navigation">&#9776;</button>

      <div class="logo-wrapper">
        <a href="/index" class="logo-link">
          <img src="/images/logo_header.webp" alt="First Lutheran Church Logo" class="logo" />
        </a>
      </div>

      <nav class="nav" id="nav-menu">
        <ul class="nav-menu">
          <li><a href="/index">Home</a></li>
          <li><a href="/messages">Messages</a></li>
          <li><a href="/giving">Online Giving</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <section class="welcome-section" id="home">
    <div class="welcome-text">
      <h1>{{ home_banner_title }}</h1>
      <p>{{ home_banner_subtitle }}</p>
    </div>
  </section>

  <section class="section section-default info-grid">

    <div class="info-row reverse">
      <div class="info-image">
        <img src="{{ home_info_grid_row_1_image }}" loading="lazy" alt="{{ home_info_grid_row_1_image_alt }}">
      </div>
      <div class="info-text">
        <h2>{{ home_info_grid_row_1_heading }}</h2>
        <p>{{ home_info_grid_row_1_paragraph | replace('\n', '<br>') | safe }}</p>
        <a href="{{ home_info_grid_row_1_button_link }}" class="button">{{ home_info_grid_row_1_button_text }}</a>
      </div>
    </div>

    <div class="info-row">
      <div class="info-image">
        <img src="{{ home_info_grid_row_2_image }}" loading="lazy" alt="{{ home_info_grid_row_2_image_alt }}">
      </div>
      <div class="info-text">
        <h2>{{ home_info_grid_row_2_heading }}</h2>
        <p>{{ home_info_grid_row_2_paragraph | replace('\n', '<br>') | safe }}</p>
        <a href="{{ home_info_grid_row_2_button_link }}" class="button">{{ home_info_grid_row_2_button_text }}</a>
      </div>
    </div>

    <div class="info-row reverse">
      <div class="info-image">
        <img src="{{ home_info_grid_row_3_image }}" loading="lazy" alt="{{ home_info_grid_row_3_image_alt }}">
      </div>
      <div class="info-text">
        <h2>{{ home_info_grid_row_3_heading }}</h2>
        <p>{{ home_info_grid_row_3_paragraph | replace('\n', '<br>') | safe }}</p>
        <a href="{{ home_info_grid_row_3_button_link }}" class="button">{{ home_info_grid_row_3_button_text }}</a>
      </div>
    </div>
  </section>

  <section class="section section-accent">
    <div class="section-inner two-column">
      <div class="column facebook">
        <h2>{{ home_accent_row_box_1_heading }}</h2>
        <div style="height: 1rem;"></div>
        <div class="fb-page"
          data-href="https://www.facebook.com/firstlutheranogdensburg"
          data-tabs="timeline"
          data-width="480"
          data-height=""
          data-small-header="true"
          data-adapt-container-width="true"
          data-hide-cover="true"
          data-show-facepile="false">
          <blockquote cite="https://www.facebook.com/firstlutheranogdensburg" class="fb-xfbml-parse-ignore">
            <a href="https://www.facebook.com/firstlutheranogdensburg">First Lutheran Ogdensburg LCMC</a>
          </blockquote>
        </div>
      </div>

      <div class="column events">
        <h2>{{ home_accent_row_box_2_heading }}</h2>
        <div style="height: 1rem;"></div>
        <div class="event-box">
          <p>{{ home_accent_row_box_2_paragraph | replace('\n', '<br>') | safe }}</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-default about-final" id="about">
    <div class="column image">
      <img src="{{ home_final_section_image }}" loading="lazy" alt="{{ home_final_section_image_alt }}" />
    </div>
    <div class="column text">
      <h2>{{ home_final_section_heading }}</h2>
      <p>{{ home_final_section_paragraph | replace('\n', '<br>') | safe }}</p>
    </div>
  </section>

  <footer>
    <p>&copy; <span id="year"></span> First Lutheran Church Ogdensburg. All rights reserved.</p>
    <script>
      document.getElementById("year").textContent = new Date().getFullYear();
    </script>
  </footer>

  <div id="fb-root"></div>
  <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v22.0"></script>

  <script src="/script.js"></script>

  <script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", (user) => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
</script>

</body>
</html>
